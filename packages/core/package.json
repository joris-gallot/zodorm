{
  "name": "@zorm-ts/core",
  "type": "module",
  "version": "0.2.1",
  "description": "A minimalist, type-safe ORM powered by Zod",
  "author": "Joris Gallot",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joris-gallot/zorm.git"
  },
  "keywords": [
    "typescript",
    "orm",
    "vue",
    "svelte",
    "solidjs",
    "schema-validation",
    "type-inference",
    "runtime-validation",
    "zod"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "build": "unbuild",
    "test": "vitest --run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/node": "catalog:types",
    "typescript": "catalog:types",
    "unbuild": "catalog:"
  }
}
